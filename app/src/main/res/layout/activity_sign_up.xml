<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".SignUp"
        android:background="@drawable/background_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Account"
            android:textSize="25dp"
            android:textColor="#333399"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=" Name"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/purple_500"
            android:drawableLeft="@drawable/icon_name"
            android:drawablePadding="8dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/icon_email"

            />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Password."
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"



            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Uppercase letter and a Number are required in your password.)"
            android:textSize="13dp"
            android:textColor="#A8AFAF"
            android:layout_marginLeft="13dp"


            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/purple_500"
            android:drawableLeft="@drawable/icon_phone"
            android:layout_marginTop="5dp"
            android:drawablePadding="8dp"
            />

    <EditText
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icons8homeaddress40"
        android:drawablePadding="8dp"
        />

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:text="Sign Up"

            android:onClick="OnSignUp"
            />

    </LinearLayout>
