<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
         android:layout_width = "match_parent"
         android:layout_height = "wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_login"
        tools:context=".Menu">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />





        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="GoCatalog"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="60dp"
            app:cardBackgroundColor="@color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_order"

                        />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Place Order"
                        android:textSize="18dp"
                        android:textColor="#333399"
                        android:textAlignment="center"
                        />
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="60dp"
            app:cardBackgroundColor="@color/white"
            android:onClick="GoBranches"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0">

                <TableRow android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_findus" />
                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nearest Branch"
                        android:textAlignment="center"
                        android:textColor="#333399"
                        android:textSize="18dp" />
                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="260dp"
            android:onClick="goNews"
            app:cardBackgroundColor="@color/white">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0">

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_virus"
                        />

                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Covid News"
                        android:textAlignment="center"
                        android:textColor="#333399"
                        android:textSize="18dp" />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="260dp"
            app:cardBackgroundColor="@color/white"
            android:onClick="goToServices"
            >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0">

                <TableRow android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_message"
                        />

                </TableRow>

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Our Services!"
                        android:textAlignment="center"
                        android:textColor="#333399"
                        android:textSize="18dp" />
                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="220dp"
            android:layout_height="120dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="120dp"
            android:onClick="goPill"
            app:cardBackgroundColor="@color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0">

                <TableRow android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/icon_bell"
                        />
                </TableRow>

                <TableRow android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pill Reminder"
                        android:textAlignment="center"
                        android:textColor="#333399"
                        android:textSize="19dp" />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



